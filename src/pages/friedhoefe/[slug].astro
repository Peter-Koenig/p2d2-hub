---
import BaseLayout from "../../layouts/BaseLayout.astro";
// Vue-Komponente importieren (nach Installation von @astrojs/vue und Erstellen der Komponente)
import OpenLayersMap from "../../components/OpenLayersMap.vue";

// Beispielhafte Friedhofsdaten (kannst du beliebig erweitern)
const friedhofe = [
    {
        slug: "melaten",
        name: "Melaten-Friedhof",
        e: 353780,
        n: 5644987,
        zoom: 16,
    },
    {
        slug: "rheinkassel",
        name: "Friedhof Rheinkassel",
        e: 354123.45,
        n: 5646789.01,
        zoom: 16,
    },
    // Weitere FriedhÃ¶fe ...
];

const { slug } = Astro.params;
const friedhof = friedhofe.find((f) => f.slug === slug);
if (!friedhof) {
    throw new Error("Friedhof nicht gefunden");
}
---

<BaseLayout title={friedhof.name}>
    <main class="flex-1 flex flex-col">
        <h1 class="text-3xl font-bold mb-6">{friedhof.name}</h1>
        <div class="flex-1 min-h-0 w-full rounded-xl overflow-hidden shadow-lg">
            <OpenLayersMap
                :e="friedhof.e"
                :n="friedhof.n"
                :zoom="friedhof.zoom"
                client:load
                style="width:100%;height:100%;"
            />
        </div>
    </main>
</BaseLayout>
